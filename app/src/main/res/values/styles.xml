<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="android:Theme.DeviceDefault.Light.DarkActionBar">
        <item name="android:actionBarStyle">@style/ActionBarStyle</item>
    </style>

    <style name="ActionBarStyle" parent="@android:style/Widget.DeviceDefault.Light.ActionBar">
        <item name="android:background">#5a97ed</item>
        <item name="android:titleTextStyle">@style/ActionBarTitleText</item>
    </style>

    <!-- ActionBar title text -->
    <style name="ActionBarTitleText"
        parent="@android:style/TextAppearance.DeviceDefault.Widget.ActionBar.Title">
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
    </style>


</resources>
